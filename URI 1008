using System;
class HelloWorld {
  static void Main() {
  
    //a beecrowd sรณ aceita variaveis especificas para validacoo de seus testes e resolucoes.
    
    int NUMBER, horasTrabalhadas;
    double valorHora, SALARY;
    
    NUMBER = int.Parse(Console.ReadLine());
    horasTrabalhadas = int.Parse(Console.ReadLine());
    valorHora=double.Parse(Console.ReadLine());
    SALARY = (double)horasTrabalhadas * valorHora;
    
    Console.WriteLine("NUMBER = "+NUMBER);
    Console.WriteLine("SALARY = U$ "+SALARY.ToString("F2"));
    
    
  }
}
